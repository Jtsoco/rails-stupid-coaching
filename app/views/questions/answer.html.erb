<div class="container d-flex flex-column align-items-start">
  <div class = "border-thick-left padding-thick margin-top">
    <h1> "<%= @question %>" </h1>
    <h2>—You</h2>
  </div>
  <div class = "border-thick-left padding-thick background-yellow margin-top">
    <h1>"<%= @response %>"</h1>
    <h2>—Your Coach</h2>
  </div>
  <div class= 'd-flex w-100 justify-content-center mt-3'>
    <%= link_to ask_path, class: 'w-50 btn btn-primary' do %>
    <i>Ask a new question</i>
    <% end %>
  </div>
</div>
